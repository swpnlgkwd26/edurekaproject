
@model AccountViewModel

<div class="card card-outline-primary m-4 p-4">
    <div class="bg-faded p-2">   
        <h3> Account Information </h3>
        <hr />
            <div class="form-group">
                <label asp-for="@Model.CustomerId">Customer ID</label>
                <input type="text" asp-for="@Model.CustomerId" readonly="true" class="form-control" placeholder="Customer ID">
               
            </div>
            <div class="form-group">
                <label asp-for="@Model.AccountNumber">Account Number</label>
                <input type="text" asp-for="@Model.AccountNumber"  readonly="true" class="form-control" placeholder="Account Number">
        
            </div>
            <div class="form-group">
                <label asp-for="@Model.AccountHolderName">Name</label>
                <input type="text" asp-for="@Model.AccountHolderName" readonly="true" class="form-control" placeholder="Name">
             
            </div>
            <div class="form-group">
                <label asp-for="@Model.Balance">Price</label>
                <input type="text" asp-for="@Model.Balance"  readonly="true" class="form-control" placeholder="Balance">
               
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address">Address</label>
                <input type="text" asp-for="@Model.Address"  readonly="true" class="form-control" placeholder="Address">
             
            </div>
            <div class="form-group">
                <label asp-for="@Model.MobileNumber">Mobile Number</label>
                <input type="text" asp-for="@Model.MobileNumber" readonly="true" class="form-control" placeholder="Mobile Number">
          
            </div>

            <div class="form-group">
                <label asp-for="@Model.TypeOfAccount">Type Of Account</label>
                <input type="text" asp-for="@Model.TypeOfAccount"  readonly="true" class="form-control" placeholder="Type Of Account">
              
            </div>
             <a asp-action="Index" class="btn btn-primary" asp-controller="Customer" asp-route-category="">Go Back</a>
        
    </div>
</div>
